@model BusinessGame.Models.Products

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Nuovo Prodotto</h1>
    <a asp-action="Index" class="text-light">
        <button class="btn btn-success rounded-circle">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Quantita" class="control-label">Quantità</label>
                <input asp-for="Quantita" class="form-control" />
                <span asp-validation-for="Quantita" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salva" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


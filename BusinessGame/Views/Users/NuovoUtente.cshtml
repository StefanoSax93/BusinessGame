@{
	ViewData["Title"] = "NuovoUtente";
}

<div class="container">
	<div class="d-flex justify-content-between align-items-center">
		<h1>Nuovo Utente</h1>
		<a asp-action="ElencoUtenti" class="text-light">
			<button class="btn btn-success rounded-circle">
				<i class="fa-solid fa-arrow-left"></i>
			</button>
		</a>
	</div>
	<hr />

	<form method="post">
		<div class="container">
			<div class="row my-3">
				<div class="col">
					Nome Completo:
				</div>
				<div class="col">
					<input type="text" class="form-control" name="Nome" />
				</div>
			</div>

			<div class="row">
				<div class="col">
				</div>
				<div class="col">
					<input class="btn btn-success" type="submit" value="Salva" />
				</div>
			</div>
		</div>

	</form>
</div>

